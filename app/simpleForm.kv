<LblTxt@BoxLayout>:
    orientation: 'horizontal'
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt


<CustomDropDown@BoxLayout>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')



<MyLayout@BoxLayout>:
    orientation: 'vertical'

    LblTxt:
        id: lt0
        lblTxtIn: 'Genre'

    LblTxt:
        id: lt1
        lblTxtIn: 'Série'

    LblTxt:
        id: lt2
        lblTxtIn: 'Numéro'

    LblTxt:
        id: lt3
        lblTxtIn: 'Personnage'

    LblTxt:
        id: lt4
        lblTxtIn: 'Exclusivité'

    LblTxt:
        id: lt5
        lblTxtIn: 'Commentaire'

    LblTxt:
        id: lt6
        lblTxtIn: 'Prix d''achat'

    LblTxt:
        id: lt7
        lblTxtIn: 'Prix de vente'

    LblTxt:
        id: lt8
        lblTxtIn: 'Photo de converture'

    LblTxt:
        id: lt8
        lblTxtIn: 'Photo(s) de vente'

    Button:
        text: 'Ajouter'
        on_release: print(lt0.theTxt.text+lt1.theTxt.text+lt2.theTxt.text)

MyLayout
