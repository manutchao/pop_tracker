#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    AccueilScreen:
    CollectionScreen:



<AccueilScreen>:
    # name: 'main'
    # Button:
    #     on_release: app.root.current = 'other'
    #     text: 'Another Screen'
    #     font_size: 20
    id: main
    name: "main"
    login: main
    orientation: "vertical"
    GridLayout:
        size_hint: (0.3, 0.3)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        rows: 6

        Button:
            text: "Créer une nouvelle collection"
            size_hint: (0.2, 0.08)
            on_release: app.root.current = 'add_collection'

        Button:
            text: "Gérer les collection"
            size_hint: (0.2, 0.08)
        Button:
            text: "Ou aut'"
            size_hint: (0.2, 0.08)







<CollectionScreen>:
    name: 'add_collection'
    id: 'add_collection'
    ScrollView:
        cols:1
        do_scroll_x: False
        do_scroll_y: True


        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Création collection POP"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4



            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Genre: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                # size_hint: 0.4, 0.12
                id: genre
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
                size_hint: (.2, None)
                height: 30


            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Série: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: serie
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4



            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Numéro: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: numero
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4




            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*3}
                text: "Personnage: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*3}
                size_hint: 0.4, 0.12
                id: personnage
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4














            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*4}
                text: "Exclusivité: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*4}
                size_hint: 0.4, 0.12
                id: exclusivite
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4





